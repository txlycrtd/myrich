<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_num_count"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        app:layout_constraintLeft_toRightOf="@+id/tv_num_count"
        android:id="@+id/tv_num"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <Button
        android:id="@+id/bt_xg"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="修改"
        app:layout_constraintLeft_toRightOf="@+id/tv_num" />

    <Button
        android:id="@+id/bt_delete"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="删除"
        app:layout_constraintLeft_toRightOf="@+id/bt_xg" />
    <View
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/bt_xg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
</android.support.constraint.ConstraintLayout>